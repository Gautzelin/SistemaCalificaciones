<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jcorreaT2A.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Sistema de Calificaciones - Semana 2"
                   FontSize="20"
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" 
                   TextColor="ForestGreen"/>

            <Label Text="Seleccionar Compañero:" />
            <Picker x:Name="pkCompañero">
                <Picker.Items>
                    <x:String>Joss Correa</x:String>
                    <x:String>Geo LG</x:String>
                    <x:String>Annie Maria</x:String>
                    <x:String>Daniel Algo</x:String>
                    <x:String>Jhon Algo</x:String>
                </Picker.Items>
            </Picker>
            <Label Text="PARCIAL 1"
                   TextColor="ForestGreen"/>

            <Label Text="Nota Seguimiento 1:" />
            <Entry x:Name="txtNota1" 
                   Keyboard="Numeric" 
                   Placeholder="Calificación de 0 a 10" />

            <Label Text="Examen 1:" />
            <Entry x:Name="txtExamen1" 
                   Keyboard="Numeric" 
                   Placeholder="Calificación de 0 a 10" />

            <Label Text="Nota Parcial 1:" />
            <Label x:Name="txtNotaParcial1" 
                   Text="0" />

            <Label Text="PARCIAL 2"
                   TextColor="ForestGreen"/>

            <Label Text="Nota Seguimiento 2:"/>
            <Entry x:Name="txtNota2" 
                   Keyboard="Numeric" 
                   Placeholder="Calificación de 0 a 10" />

            <Label Text="Examen 2:" />
            <Entry x:Name="txtExamen2" 
                   Keyboard="Numeric" 
                   Placeholder="Calificación de 0 a 10" />

            <Label Text="Nota Parcial 2:" />
            <Label x:Name="txtNotaParcial2" 
                   Text="0" />

            <Label Text="Fecha:" />
            <DatePicker x:Name="FechaDatePicker" />

            <Button Text="Calcular Calificaciones" 
                    Clicked="Button_Clicked"
                    BackgroundColor="ForestGreen"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
